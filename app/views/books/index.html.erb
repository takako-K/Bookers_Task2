<!DOCTYPE html>
<html lang "ja">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="style.css" />
    <title>Bookers</title>
  </head>

  <body>

    <h1>Books</h1>

    <table>

      <thead>
        <tr>
          <th>title</th>
          <th>body</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td>
            <%= post.body %>
          </td>
          <td>
            <%= link_to "show", post_path(post.id)%>
            <%= link_to "edit", edit_post_path(post.id)%>
            <%= link_to "destroy", destroy_post_path(post.id), method: :delete, "date-confirm" => "Are you sure?" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <h2>New book</h2>
    <%= form_for(@post) do |f| %>

    <h3>Title</h3>
    <%= f.text_field :title %>

    <h3>Body</h3>
    <%= f.text_area :body %>


    <%= f.submit 'Create Book' %>

    <% end %>
  </body>

